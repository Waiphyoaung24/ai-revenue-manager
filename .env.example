# Environment Configuration Example

# Application Settings
APP_ENV=development
PROJECT_NAME="Web Assistant"
VERSION=1.0.0
DEBUG=true

# API Settings
API_V1_STR=/api/v1

# CORS Settings
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:8000"

# Langfuse Settings
LANGFUSE_PUBLIC_KEY="your-langfuse-public-key"
LANGFUSE_SECRET_KEY="your-langfuse-secret-key"
LANGFUSE_HOST=https://cloud.langfuse.com

# LLM Settings (existing chatbot)
OPENAI_API_KEY="your-openai-api-key"
DEFAULT_LLM_MODEL=gpt-4o-mini
DEFAULT_LLM_TEMPERATURE=0.2

# ── LLM Provider Selection ────────────────────────────────────────────────────
# Anthropic / Claude Settings (used when provider="anthropic")
ANTHROPIC_API_KEY="your-anthropic-api-key"
REVENUE_ROUTER_MODEL=claude-haiku-4-5-20251001
REVENUE_ANALYST_MODEL=claude-haiku-4-5-20251001
REVENUE_FORECASTER_MODEL=claude-sonnet-4-6
REVENUE_STRATEGIST_MODEL=claude-sonnet-4-6
REVENUE_MANAGER_MODEL=claude-haiku-4-5-20251001

# Google Gemini Settings (used when provider="gemini")
GEMINI_API_KEY="your-gemini-api-key"
# Flash = fast / cheap nodes; Pro = heavy reasoning nodes
GEMINI_ROUTER_MODEL=gemini-2.0-flash
GEMINI_ANALYST_MODEL=gemini-2.0-flash
GEMINI_FORECASTER_MODEL=gemini-2.5-pro-preview-06-05
GEMINI_STRATEGIST_MODEL=gemini-2.5-pro-preview-06-05
GEMINI_MANAGER_MODEL=gemini-2.0-flash

# JWT Settings
JWT_SECRET_KEY="your-jwt-secret-key"
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_DAYS=30

# Database Settings
POSTGRES_HOST=db
POSTGRES_DB=mydb
POSTGRES_USER=myuser
POSTGRES_PORT=5432
POSTGRES_PASSWORD=mypassword
POSTGRES_POOL_SIZE=5
POSTGRES_MAX_OVERFLOW=10

# Rate Limiting Settings
RATE_LIMIT_DEFAULT="1000 per day,200 per hour"
RATE_LIMIT_CHAT="100 per minute"
RATE_LIMIT_CHAT_STREAM="100 per minute"
RATE_LIMIT_MESSAGES="200 per minute"
RATE_LIMIT_LOGIN="100 per minute"

# Logging
LOG_LEVEL=DEBUG
LOG_FORMAT=console
